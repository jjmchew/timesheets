server {

  root /var/www/domain.xyz/html;
  index index.html index.htm;

  server_name domain.xyz www.domain.xyz;

  location / {
    try_files $uri $uri/ =404;
  }

  location /timesheets {
    proxy_pass http://localhost:4667;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }

  location /anotherbackend {
    # try_files $uri $uri/ =404;
    proxy_pass http://localhost:3003;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/domain.xyz/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/domain.xyz/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.domain.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = domain.xyz) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



  server_name domain.xyz www.domain.xyz;
    listen 80;
    return 404; # managed by Certbot

}
